<%-include('header') %>

<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold text-light ">Login System</h2>
            <span class="title2 text-light">Login for the existing user</span>
            
                <%if (locals.alert){%>
                     <div id="alert"class="alert alert-danger text-center">
                       <%= alert %>
                     </div>
                <% } %>
            
            <% if(locals.logout){%>
                <div class="alert alert-success text-center">
                    <%= logout %>
                </div>

                <% } %>
        </div>
        <form action="/route/login" method="POST">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email">
                <small class="form-text text-light text-left " >Register email address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="password">
            </div>
            
                <button type="submit" class="btn btn-success mt-3 rounded-pill">submit</button>
            
        </form>
    </div>

</div>
<script>
    setTimeout(()=>{
        document.getElementById('alert').style.display="none"
    },3000);
</script>
<%-include('footer')%>
